<Window x:Class="hacker_typer_simulator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    Title="Hacker Terminal"
    Height="450"
    Width="800"
    WindowStyle="None"
    ResizeMode="CanResize"
    Background="Black"
    WindowStartupLocation="CenterScreen"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    KeyDown="Window_KeyDown"
    shell:WindowChrome.WindowChrome="{DynamicResource CustomWindowChrome}">

    <Window.Resources>
        <!-- WindowChrome config -->
        <shell:WindowChrome x:Key="CustomWindowChrome"
            ResizeBorderThickness="8"
            CaptionHeight="0"
            GlassFrameThickness="-1"
            CornerRadius="0"
            UseAeroCaptionButtons="False"/>

        <!-- Button template -->
        <Style x:Key="TerminalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Name="Border" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#60000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="Black"
              Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!-- Terminal content -->
            <ScrollViewer Grid.Row="0"
                          VerticalScrollBarVisibility="Auto"
                          Padding="0,-2,0,0"
                          Background="Black">
                <Grid>
                    <TextBlock x:Name="TerminalTextBlock"
                          Foreground="#00FF00"
                          FontFamily="Consolas"
                          FontSize="14"
                          TextWrapping="Wrap"
                          Margin="10 8 10 10"/>

                    <!-- Cursor -->
                    <TextBlock x:Name="BlinkCursor"
                          Text="█"
                          Foreground="#00FF00"
                          FontFamily="Consolas"
                          FontSize="14"
                          Margin="{Binding ElementName=TerminalTextBlock, Path=Margin}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"/>
                </Grid>
            </ScrollViewer>

            <!-- Bottom bar -->
            <Border Grid.Row="1"
                Background="#80000000"
                Panel.ZIndex="99">
                <DockPanel LastChildFill="False">
                    <Button DockPanel.Dock="Left"
                        Content="Settings"
                        Width="80" 
                        Height="30"
                        Margin="5"
                        Style="{StaticResource TerminalButtonStyle}"
                        Click="SettingsButton_Click"/>

                    <Button DockPanel.Dock="Left"
                        Content="Exit"
                        Width="80"
                        Height="30"
                        Margin="5"
                        Style="{StaticResource TerminalButtonStyle}"
                        Click="ExitButton_Click"/>

                    <Button DockPanel.Dock="Right"
                        Content="Full"
                        Width="80"
                        Height="30"
                        Margin="5"
                        Style="{StaticResource TerminalButtonStyle}"
                        Click="FullScreenButton_Click"/>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>
