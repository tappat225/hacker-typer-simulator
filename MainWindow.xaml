<Window x:Class="hacker_typer_simulator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Hacker Terminal" Height="450" Width="800"
    WindowStyle="None"
    ResizeMode="CanResizeWithGrip"
    AllowsTransparency="True"
    Background="Black"
    KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />   <!-- Main content area -->
            <RowDefinition Height="40" />  <!-- Bottom area -->
        </Grid.RowDefinitions>

        <TextBlock x:Name="TerminalTextBlock"
           Foreground="Lime"
           FontFamily="Consolas"
           FontSize="14"
           TextWrapping="Wrap"
           Margin="10"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"/>

        <TextBlock x:Name="BlinkCursor"
           Text="|"
           Foreground="Lime"
           FontFamily="Consolas"
           FontSize="14"
           Margin="10"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"/>

        <!-- Bottom Bar -->
        <DockPanel Grid.Row="1" Background="#80000000">
            <!-- Semi-transparent gray -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">
                <!-- Settings Button -->
                <Button Content="Settings"
                Width="80"
                Height="30"
                Margin="5"
                Foreground="Lime"
                Background="#40000000"
                BorderBrush="Transparent"
                Click="SettingsButton_Click"/>

                <!-- Exit Button -->
                <Button Content="Exit"
                    Width="80"
                    Height="30"
                    Margin="5"
                    Foreground="Lime"
                    Background="#40000000"
                    BorderBrush="Transparent"
                    Click="ExitButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
